{
  "name": "pug-bem-start-project",
  "version": "3.0.0",
  "description": "Startkit for HTML/CSS/JS pages layout.",
  "author": "Evgeny Ovchinnikov",
  "license": "ISC",
  "main": "gulpfile.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp development",
    "build": "cross-env NODE_ENV=production gulp production",
    "lint:styles": "stylelint --quiet-deprecation-warnings \"src/**/*.scss\"",
    "lint:scripts": "eslint \"src/**/*.js\"",
    "lint:markup": "html-validator '--ignore=Trailing slash on void elements' \"build/**/!(sitemap).html\" --continue",
    "lint:html": "linthtml \"build/**/!(sitemap).html\" --config .linthtmlrc",
    "build:zip": "gulp buildArchive"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not op_mini all",
    "not and_uc > 0",
    "not < 0.2%"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "3.0.0",
    "@prettier/plugin-pug": "3.0.0",
    "browser-sync": "3.0.2",
    "browserslist-to-esbuild": "2.1.1",
    "cpy": "11.1.0",
    "cross-env": "7.0.3",
    "emitty": "1.4.0",
    "eslint": "8.57.0",
    "eslint-config-htmlacademy": "10.0.1",
    "get-classes-from-html": "1.0.1",
    "gulp": "4.0.2",
    "gulp-esbuild": "0.12.1",
    "gulp-if": "3.0.0",
    "gulp-notify": "5.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "10.0.0",
    "gulp-pretty-html": "2.0.10",
    "gulp-pug": "5.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sharp-responsive": "0.4.1",
    "gulp-stacksvg": "5.0.1",
    "gulp-svgmin": "4.1.0",
    "gulp-zip": "6.1.0",
    "linthtml-config-htmlacademy": "1.1.0",
    "mkdirp": "3.0.1",
    "postcss": "8.4.38",
    "postcss-combine-media-query": "^2.0.0",
    "postcss-lightningcss": "1.0.0",
    "postcss-normalize": "^13.0.1",
    "prettier": "3.3.3",
    "pug": "3.0.3",
    "sass": "1.77.4",
    "stylelint": "16.22.0",
    "stylelint-config-htmlacademy": "4.2.3",
    "stylelint-config-recess-order": "7.1.0",
    "stylelint-order": "7.0.0",
    "w3c-html-validator": "1.9.0"
  },
  "dependencies": {
    "@fancyapps/ui": "^6.0.12",
    "accordion-js": "^3.3.4",
    "aos": "^2.3.4",
    "countup.js": "^2.8.0",
    "handy-collapse": "^1.1.0",
    "imask": "^7.6.1",
    "just-validate": "^4.3.0",
    "swiper": "^11.1.11",
    "tippy.js": "^6.3.7"
  }
}
