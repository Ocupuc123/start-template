    "baron": "latest",
    "choices.js": "latest",
    "gsap": "latest",
    "handy-collapse": "latest",
    "hc-sticky": "latest",
    "img-comparison-slider": "latest",
    "inputmask": "latest",
    "jquery": "latest",
    "just-validate": "latest",
    "normalize.css": "latest",
