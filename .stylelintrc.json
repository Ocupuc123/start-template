{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss", "stylelint-config-rational-order"],
  "plugins": ["stylelint-order", "stylelint-scss"],
  "rules": {
    "order/order": [
      "custom-properties",
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": false
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "media"
      },
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": true
      },
      {
        "type": "rule",
        "selector": "&::before"
      },
      {
        "type": "rule",
        "selector": "&::after"
      },
      {
        "type": "rule",
        "selector": "&:link"
      },
      {
        "type": "rule",
        "selector": "&:visited"
      },
      {
        "type": "rule",
        "selector": "&:focus"
      },
      {
        "type": "rule",
        "selector": "&:hover"
      },
      {
        "type": "rule",
        "selector": "&:active"
      },
      {
        "type": "rule",
        "selector": "&:disabled"
      },
      {
        "type": "rule",
        "selector": "&:first-child"
      },
      {
        "type": "rule",
        "selector": "&:last-child"
      },
      {
        "type": "rule",
        "selector": "&:nth-child.+"
      },
      {
        "type": "rule",
        "selector": ".* &"
      },
      {
        "type": "rule",
        "selector": "^\\.[-_a-zA-Z0-9]+"
      },
      {
        "type": "rule",
        "selector": "^&__[-a-z0-9]+"
      },
      {
        "type": "rule",
        "selector": "^&--[-a-z0-9]+"
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["rfs-fluid-value"]
      }
    ]
  },
  "overrides": [{
    "files": ["src/scss/*/**.scss"],
    "customSyntax": "postcss-scss"
  }]
}
