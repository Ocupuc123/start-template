//- Все примеси в этом файле должны начинаться c имени блока (full-screen)

mixin full-screen(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +full-screen('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' full-screen--' + modsList[i].trim();
      }
    }

  .full-screen(class=allMods)&attributes(attributes)
    .full-screen__wrapper
      .full-screen__screen
        block
