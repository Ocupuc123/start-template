//- Все примеси в этом файле должны начинаться c имени блока (mobile-nav)

mixin mobile-nav(text, mods)
  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
      +mobile-nav(id='mobile-nav', 'Текст', 'some-mod')
    Показать мобильное меню:
      +burger('Открыть главное меню')(data-mobile-nav-target='#mobile-nav', data-mobile-nav='open')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' mobile-nav--' + modsList[i].trim();
      }
    }

  .mobile-nav(id=id, class=allMods, tabindex="-1")&attributes(attributes)
    .mobile-nav__dialog
      .mobile-nav__content
        +close('Закрыть').mobile-nav__close(data-mobile-nav="close")
        .mobile-nav__body
          .mobile-nav__menu
            noindex
              +main-nav('3')
        .mobile-nav__footer
          .mobile-nav__action
            +btn("Сделать заказ", "gradient, sm")(href="#")
          .mobile-nav__phone
            a(href="tel:+79211777779") +7 (936) 666-82-64
          .mobile-nav__mail
            a(href="mailto:reklama@rk51.ru") reklama@rk51.ru
