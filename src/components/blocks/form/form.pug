//- Все примеси в этом файле должны начинаться c имени блока (form)
//- ВНИМАНИЕ: в файле две примеси

mixin form(mods)
  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
    +form
      +fieldset
        +field-text({ attrs: { id: 'name', name: 'name', placeholder: 'ФИО родителя', autocomplete: 'off', } })
        +field-text({ attrs: { id: 'phone', name: 'phone', placeholder: '+7 (___) ___-__-__', class: 'input-mask', autocomplete: 'off' } })
        +field-checkbox([{ title: 'Нажимая на кнопку, вы соглашаетесь с политикой конфиденциальности, согласием на передачу персональных данных, согласием на обработку персональных данных, публичной офертой.', attrs: { id: 'approval', name: 'check0', checked: true, } }])
      +fieldaction
        +btn('Отправить', 'main')(type="submit")

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' form--' + modsList[i].trim();
      }
    }

  form.form(class=allMods, autocomplete="off")&attributes(attributes)
    block

mixin fieldset(mods)
  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
    +fieldset('mod')
      +field-text({
        helpText: 'Подсказка',
        attrs: {
          placeholder: 'Пример'
        }
      })

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' form--' + modsList[i].trim();
      }
    }

  .form__fieldset(class=allMods)&attributes(attributes)
    block

mixin fieldaction(mods)
  .form__action
    block
